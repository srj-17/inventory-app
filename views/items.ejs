<html>
    <%- include("partials/head", {title: title}) %>
    <body>
        <%- include("partials/heading") %>
        <main>
            <a href="/<%= categoryId %>/items/create">Create New Item</a>
            <% items.map(item => { %>
            <li>
                <%= item.name %> 
                <a href="/<%= categoryId %>/items/update/<%= item.id %>">
                    Change Name
                </a>
                <form 
                    method="POST" 
                    action="/<%= categoryId %>/items/delete/<%= item.id %>"
                    >
                    <button type="submit">Delete Item</button>
                </form>
            </li>
            <% }) %>
        </main>
    </body>
</html>
